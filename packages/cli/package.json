{
  "name": "cli",
  "author": "",
  "description": "Stricli command line application",
  "license": "MIT",
  "type": "module",
  "version": "0.0.0",
  "files": [
    "dist"
  ],
  "bin": {
    "cli": "dist/cli.js",
    "__cli_bash_complete": "dist/bash-complete.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prebuild": "tsc -p src/tsconfig.json",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "postinstall": "cli install"
  },
  "tsup": {
    "entry": [
      "src/bin/cli.ts",
      "src/bin/bash-complete.ts"
    ],
    "format": [
      "esm"
    ],
    "tsconfig": "src/tsconfig.json",
    "clean": true,
    "splitting": true,
    "minify": true
  },
  "dependencies": {
    "@stricli/core": "^1.0.0",
    "@stricli/auto-complete": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "tsup": "^6.7.0",
    "typescript": "5.6.x"
  }
}