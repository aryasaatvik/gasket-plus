{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "declaration": true,
    "outDir": "./lib",
    "types": [
      "@gasket/plugin-typescript",
      "@gasket/plugin-nextjs"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "generator",
    "node_modules",
    "lib"
  ]
}
